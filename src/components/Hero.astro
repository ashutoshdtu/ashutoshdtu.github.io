---
import "animate.css";

interface Props {
	title: string;
	herotext?: string;
	tagline?: string;
	align?: "start" | "center";
}

const { align = "center", tagline, herotext, title } = Astro.props;
---

<header
	class:list={[
		"hero stack gap-4 animate__animated animate__fadeInUp animate__noscroll",
		align,
	]}
>
	<div class="stack gap-2">
		<h1 class="title">
			<span class="with-newline">{title}</span>
			{herotext && <span class="with-newline herotext">{herotext}</span>}
		</h1>
		<!-- {herotext && <h1 class="title herotext">{herotext}</h1>} -->
		<br />
		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</header>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
		transition: transform (--theme-transition);
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	.with-newline {
		white-space: pre;
	}

	.herotext {
		font-size: var(--text-3xl);
		background-image: var(--gradient-accent-text);
		-webkit-background-clip: text; /* For webkit-based browsers */
		-webkit-text-fill-color: transparent; /* For webkit-based browsers */
		background-clip: text;
		text-fill-color: transparent;
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-lg);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-3xl);
		}
		.herotext {
			font-size: var(--text-3xl);
		}
	}

	@media (min-width: 70em) {
		.hero {
			font-size: var(--text-xl);
		}

		.title {
			font-size: var(--text-4xl);
		}
		.herotext {
			font-size: var(--text-4xl);
		}
	}
</style>
